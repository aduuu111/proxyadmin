[Unit]
Description=ProxyAdminPanel Backend Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/proxyadmin
Environment="PATH=/opt/proxyadmin/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/opt/proxyadmin/venv/bin/python main.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
